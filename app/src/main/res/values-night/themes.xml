<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.RepuestosExpress.Dark" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your dark theme here. -->
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_green</item>
        <item name="colorPrimaryVariant">@color/dark_green_variant</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dark_green_menta</item>
        <item name="colorSecondaryVariant">@color/dark_green_oliva</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Background color. -->
        <item name="android:colorBackground">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Text color. -->
        <item name="android:textColor">@color/white</item>
        <!-- Hint text color for EditText. -->
        <item name="android:textColorHint">@color/gray</item>
    </style>

    <style name="Theme.RepuestosExpress.Dark" parent="Base.Theme.RepuestosExpress.Dark" />
</resources>
